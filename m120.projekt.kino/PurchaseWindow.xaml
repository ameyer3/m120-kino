<Window x:Class="m120.projekt.kino.PurchaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:m120.projekt.kino"
        mc:Ignorable="d"
        Title="PurchaseWindow" Height="250" Width="800">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <!--Labels-->
        <Label VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Content="Title:"></Label>
        <Label VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Content="Category:"></Label>
        <Label VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Content="Duration:"></Label>
        <Label VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Content="Time:"></Label>
        <Label VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Content="Amount available tickets:"></Label>
        <Label VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Content="Tickets:"></Label>
        <Label VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" Content="Total Price:"></Label>
        
        
        <TextBlock VerticalAlignment="Center"   Grid.Row="0" Grid.Column="1" Text="{Binding Title}"></TextBlock>
        <TextBlock VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Text="{Binding Category.Description}"></TextBlock>
        <TextBlock VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Text="{Binding Duration}"></TextBlock>
        <ComboBox VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Name="comboTimes" ItemsSource="{Binding Shows}" DisplayMemberPath="Time" SelectedIndex="0" SelectedItem="{Binding SelectedShow}" />

        <TextBlock VerticalAlignment="Center" Grid.Row="0" Grid.Column="3" Text="{Binding ElementName=comboTimes, Path=SelectedItem.AmountFreeSeats}"></TextBlock>
        <TextBox VerticalAlignment="Center" Grid.Row="1" Grid.Column="3" Text="{Binding AmountTickets, UpdateSourceTrigger=PropertyChanged}"></TextBox>


        <TextBlock VerticalAlignment="Center" Grid.Row="2" Grid.Column="3" Text="{Binding TotalPrice, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <Button VerticalAlignment="Center" Grid.Row="3" Grid.Column="3" Content="Book" Command="{Binding BookTicketsCommand}"></Button>
    </Grid>
</Window>
